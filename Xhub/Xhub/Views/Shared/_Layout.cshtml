<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>X-Hub</title>
	<link href="https://fonts.googleapis.com/css?family=Arvo|Jaldi" rel="stylesheet">
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")

</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("X-Hub", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse">
				<ul class="nav navbar-nav">
					<li>@Html.ActionLink("About", "About", "Home")</li>
					<li>@Html.ActionLink("Events", "AllEvents", "Events")</li>
					<li>@Html.ActionLink("Classes", "AllClasses", "Classes")</li>
				</ul>
				@Html.Partial("_LoginPartial")
			</div>
		</div>
	</div>

	@if (ViewBag.Title == "Home")
	{
		// Include image if at Homepage
		<div>
			<img  class="hero-image" src="~/Images/hero.png" alt="School and students"/>
		</div>
	}

	<div class="container body-content">
		@RenderBody()
		<div class="push-down"></div>
		<footer>
			<p>@DateTime.Now.Year - X-Corporation</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	<script src="~/Scripts/bootstrap-datepicker.min.js"></script>
	<script>
		$('input.datepicker').datepicker( {format: 'm/d/yyyy'} );
	</script>
	@RenderSection("scripts", required: false)
</body>
</html>
