@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
	using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
	{
	@Html.AntiForgeryToken()

	<ul class="nav navbar-nav navbar-right">
		<li class="dropdown">
			<a href="#" class="dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
				 @User.Identity.GetUserName()
				<span class="caret"></span>
			</a>
			<ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
				<li><a href="@Url.Action("StudentInfo", "Student")">My Profile</a></li>
				<li><a href="@Url.Action("Attending", "Events")">Events I'm Attending</a></li>
				<li><a href="@Url.Action("MyEvents", "Events")">My Events</a></li>
				<li role="separator" class="divider"></li>
				<li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
			</ul>
		</li>
	</ul>
	}
}
else
{
	<ul class="nav navbar-nav navbar-right">
		<li>@Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
		<li><div>/</div></li>
		<li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>

	</ul>
}
