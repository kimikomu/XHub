@model IEnumerable<Xhub.Models.Class>

@{
	ViewBag.Title = "Classes";
}

<h2>@ViewBag.Title</h2>

@*<p>*@
@*    @Html.ActionLink("Create New", "Create")*@
@*</p>*@
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.ClassName)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.FirstClass)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.SecondClass)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.LengthInMinutes)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.ClassLocation)
		</th>
		<th></th>
	</tr>
@foreach (var item in Model) {
	<tr class="well table-scroll">
		<td>
			@item.ClassName
		</td>
		<td>
			@item.FirstClass.ToString("dddd") @item.FirstClass.ToString("t") 
		</td>
		<td>
			@item.SecondClass.ToString("dddd") @item.SecondClass.ToString("t") 
		</td>
		<td>
			@item.LengthInMinutes Minutes
		</td>
		<td>
			@item.ClassLocation
		</td>
		<td>
